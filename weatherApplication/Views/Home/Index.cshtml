@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Authentication.cshtml";
}

<main class="form-signin">
  <form asp-action ="Validation" style="border-radius:60px;background-color:#E3E2E6">
    <img class="mb-4" src="https://cdn-icons-png.flaticon.com/512/1779/1779940.png" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Iniciar Sessão</h1>

    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" name= "username" placeholder="name@example.com" required>
      <label for="floatingInput">E-mail</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" name= "password"  placeholder="Password" required>
      <label for="floatingPassword">Password</label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Memorizar
      </label>
    </div>

     <small style="color:red">

        <!---Authentication warning message--> 
         <!---ViewBag.ErrorMessage-->

        @if(ViewData["ErrorMessage"]!=null)
         {

             <div class='alert-danger'><label>@ViewData["ErrorMessage"]</label></div><br/>
           
         }
    </small>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>

    <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
  </form>
</main>